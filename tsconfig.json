{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitThis": false,
    // "noEmit": true,
    // "strictFunctionTypes": true,
    "noEmitOnError": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es6",
      "es7",
      "dom"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true
    // "skipLibCheck": true   
  },
  "include": ["./src", "./types.d.ts"],
  "exclude": ["node_modules", "test", "dist", "./jest.config.js"]
}
